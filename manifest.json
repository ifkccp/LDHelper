{
	"name": "LDHunter",
	"version": "1.0.0",
	"manifest_version": 2,
	"permissions": ["tabs", "*://*.lvye.cn/*"],

	"background": {
		"scripts": ["js/background.js"]
	},

	"icons": {
		"128": "img/Icon.png",
		"16": "img/icon-16.png",
		"48": "img/icon-48.png"
	},

	"page_action": {
		"default_icon": "img/icon-16.png"
	},

	"content_scripts": [
		{
			"js": [
				"js/lib/Settings.js",
				"js/lib/Http.js",
				"js/LDHunter.js",
				"js/test.js"
			],
			"css": ["css/LDHunter.css"],
			"matches": ["*://bbs.lvye.cn/*"],
			"run_at": "document_end"
		}
	],

   "options_page": "options.html"
}