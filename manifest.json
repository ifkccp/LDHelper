{
	"name": "绿点助手",
	"version": "1.0",
	"manifest_version": 1,
	"permissions": [
		"tabs",
		"*://bbs.lvye.cn/*",
		"*://sns.lvye.cn/*",
		"*://42.121.193.15/*"
	],

	"background": {
		"scripts": [
			"js/lib/Settings.js",
			"js/background.js"
		]
	},

	"icons": {
		"128": "ico.png",
		"16": "ico.png",
		"48": "ico.png"
	},

	"page_action": {
		"default_icon": "ico.png"
	},

	"content_scripts": [
		{
			"js": [
				"js/lib/Utils.js",
				"js/LDHelper.js",
				"js/test.js"
			],
			"css": ["css/LDHelper.css"],
			"matches": ["*://bbs.lvye.cn/*", "*://sns.lvye.cn/*"],
			"run_at": "document_end"
		}
	],

   "options_page": "options.html",
   "update_url": "http://www.v5snj.com"
}